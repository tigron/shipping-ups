{% extends "base.twig" %}
{% block content %}
{
  "RateRequest": {
    "Request": {
      "TransactionReference": {
        "CustomerContext": "Customer Comment"
      }
    },
    "Shipment": {
      "Shipper": {
{{ shipper.render_shipper()|raw }}
      },
      "ShipTo": {
{{ recipient.render()|raw }}
      },
      "ShipFrom": {
{{ ship_from.render()|raw }}
      },
      "PaymentDetails": {
        "ShipmentCharge": {
          "Type": "01",
          "BillShipper": {
            "AccountNumber": "{{ account_number }}"
          }
        }
      },
      "Service": {
        "Code": "{{ service.code }}",
        "Description": "{{ service.name }}"
      },
      "NumOfPieces": "{{ packages|length }}",
{% for package in packages %}
      "Package": {
{{ package.render()|raw }}
      }
{% endfor %}
    }
  }
}
{% endblock content %}
