{% if contact.company == '' %}
	<CompanyName>{{ (contact.firstname ~ ' ' ~ contact.lastname)|truncate(35, false, '') }}</CompanyName>
{% else %}
	<CompanyName>{{ contact.company|truncate(35, false, '') }}</CompanyName>
{% endif %}
<AttentionName>{{ (contact.firstname ~ ' ' ~ contact.lastname)|truncate(35, false, '') }}</AttentionName>
<PhoneNumber>{{ contact.phone }}</PhoneNumber>
{% if contact.email != '' %}
	<EmailAddress>{{ contact.email|truncate(50, false, '') }}</EmailAddress>
{% endif %}
<Address>
	{{ contact.address.render()|raw }}
</Address>
