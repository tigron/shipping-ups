<InternationalForms>
	<FormType>{{ internationalforms.type }}</FormType>
	{% for product in internationalforms.get_products() %}
		{{ product.render()|raw }}
	{% endfor %}

	<CurrencyCode>EUR</CurrencyCode>
	<InvoiceDate>{{ shipment.created|date('Ymd') }}</InvoiceDate>
	<ReasonForExport>{{ internationalforms.export_reason }}</ReasonForExport>

	<Contacts>
		<SoldTo>
			{{ internationalforms.soldto.render_soldto()|raw() }}
		</SoldTo>
	</Contacts>

	{% if internationalforms.type == '01' %}
	<DeclarationStatement>
		I hereby certify that the information on this invoice is true and correct and the contents and value of this shipment is as stated above.
	</DeclarationStatement>
	{% endif %}
</InternationalForms>
