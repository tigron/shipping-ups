<Product>
	{% for line in product.get_description_parts() %}
		<Description>{{ line|raw }}</Description>
	{% endfor %}
	<Unit>
		<Number>{{ product.quantity }}</Number>

		<UnitOfMeasurement>
			<Code>{{ product.measurement_code }}</Code>
			<Description>{{ product.measurement_description[product.measurement_code] }}</Description>
		</UnitOfMeasurement>
		<Value>{{ product.value }}</Value>
	</Unit>

	<OriginCountryCode>{{ product.origin_country }}</OriginCountryCode>
	<ProductCurrencyCode>EUR</ProductCurrencyCode>
</Product>
